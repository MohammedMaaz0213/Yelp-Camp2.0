<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
            
        <form class="needs-validation" action="/campgrounds"  method="post" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text"  id="title" name="campground[title]" required>
                <div class="valid-feedback">
                    Looks Good
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="campground[image]" required>
            </div>
              <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>

                <div class="input-group">
                
                <span class="input-group-text" id="price-label">$</span>
                <input name="campground[prrice]" type="text" class="form-control" id="price" required placeholder="0.00" aria-label="price" aria-describedby="price-label">
              </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" required name="campground[description]"></textarea>  
            </div>
            <div class="mb-3">
            <button class="btn btn-success">Add Campground</button>
            </div>
        </form>
           <a href="/campgrounds">All Campgrounds</a>
    </div>
</div>

